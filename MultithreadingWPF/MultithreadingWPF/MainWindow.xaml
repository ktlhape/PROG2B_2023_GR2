<Window x:Class="MultithreadingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultithreadingWPF"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Name="lstEven" BorderBrush="Blue" BorderThickness="2" FontSize="25" Margin="50,50,50,50" Height="NaN" Width="NaN"/>
        <ListBox Name="lstOdd" Grid.Column="1" BorderBrush="Blue" BorderThickness="2" FontSize="25" Margin="50,50,50,50" Height="NaN" Width="NaN"/>
        <Button Name="btnEven" Content="Even Numbers" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top" Height="24" Width="96" Click="btnEven_Click"/>
        <Button Name="btnOdd" Content="Odd Numbers" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top" Height="24" Width="98" Grid.Column="1" Click="btnOdd_Click"/>

    </Grid>
</Window>
